# Include important project files
include README.md
include LICENSE
include requirements.txt
include pytest.ini

# Include the main anvyl package
recursive-include anvyl *.py
recursive-include anvyl *.proto

# Include tests (but they won't be installed)
recursive-include tests *.py

# Include documentation
recursive-include docs *.md *.rst

# Exclude development and build artifacts
exclude .gitignore
exclude Dockerfile*
exclude docker-compose*.yml
exclude test_*.py
exclude **/test_*.py
exclude *.log
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store

# Exclude UI, scripts, and other non-package files from installation
recursive-exclude ui *
recursive-exclude scripts *
recursive-exclude package_env *