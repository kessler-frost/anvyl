# Include important project files
include README.md
include LICENSE
include requirements.txt
include pytest.ini

# Include main modules
include anvyl_cli.py
include anvyl_grpc_server.py

# Include protobuf files
include protos/*.proto
recursive-include generated *.py

# Include package data
recursive-include anvyl_sdk *.py
recursive-include database *.py

# Include documentation
recursive-include docs *.md *.rst

# Include scripts
recursive-include scripts *.sh *.py

# Exclude development and build artifacts
exclude .gitignore
exclude Dockerfile*
exclude docker-compose*.yml
exclude test_*.py
exclude **/test_*.py
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude ui *
recursive-exclude package_env *
exclude *.log